server {
    listen 8080;

    location / {
        proxy_pass http://localhost:8188;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        client_max_body_size 100M;
    }

    location /output {
        alias /workspace/ComfyUI/output;  # Serve files from this directory
        autoindex off;                    # Disable directory listing

        # Allow access to common image and video files
        # Images: png, jpg, jpeg, webp, gif, bmp, tif, tiff, svg
        # Videos: mp4, webm, mkv, mov, avi, m4v
        # Audio: mp3
        location ~* \.(png|jpe?g|webp|gif|bmp|tiff?|svg|mp4|webm|mkv|mov|avi|m4v|mp3)$ {
            try_files $uri =404;          # Return 404 if the file doesn't exist
        }

        # Deny access to all other file types
        location /output/ {
            deny all;                      # Deny access to all files not matching the PNG pattern
        }
    }
}